@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (SignInManager.IsSignedIn(User))
{
    <a class="btn btn-primary popup" data-url="Home/NewAgreement" data-toggle="modal" data-target="#modal-create-edit-user" id="UserModel">Add New User <i class="fa fa-plus"></i></a>
    <!-- Button trigger modal -->
    <!--<button type="button" id="addnew" class="btn btn-primary" data-url="Home/NewAgreement" data-toggle="modal" data-target="#modal-create-edit-aggrement">
        Add edit Agreement
    </button>-->

    <div aria-hidden="true" aria-labelledby="modal-create-edit-user-label" role="dialog" tabindex="-1" id="modal-create-edit-user" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content" id="modal-aggrement">

            </div>
        </div>
    </div>


    <table id="agreementList" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>ProductGroupName</th>
                <th>ProductName</th>
                <th>EffectiveDate</th>
                <th>ExpirationDate</th>
                <th>ProductPrice</th>
                <th>NewPrice</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
    @section scripts{
        <script>
            (function ($) {
                function Index() {
                    var $this = this;
                    function initialize() {

                        $(".popup").on('click', function (e) {
                            modelPopup(this);
                        });

                        function modelPopup(reff) {
                            var url = $(reff).data('url');

                            $.get(url).done(function (data) {
                                $('#modal-create-edit-user').find("#modal-aggrement").html(data);
                                $('#modal-create-edit-user > .modal', data).modal("show");
                            });

                        }
                    }

                    $this.init = function () {
                        initialize();
                    };
                }
                $(function () {
                    var self = new Index();
                    self.init();
                });
            }(jQuery));

            $(document).ready(function () {
                $('#agreementList').DataTable({
                    "sPaginationType": "full_numbers",
                    "bProcessing": true,
                    "sAjaxSource": "/Home/AgreementList",
                    aoColumns: [
                        { "data": "productGroupName", "sClass": "text-center", "sWidth": "10%" },
                        { "data": "productName", "sClass": "text-center", "sWidth": "10%" },
                        { "data": "effectiveDate", "sClass": "text-center", "sWidth": "10%" },
                        { "data": "expirationDate", "sClass": "text-center", "sWidth": "10%" },
                        { "data": "productPrice", "sClass": "text-center", "sWidth": "10%" },
                        { "data": "newPrice", "sClass": "text-center", "sWidth": "10%" },
                        {
                            "bSearchable": false,
                            "bSortable": false,
                            "sClass": "text-center",
                            "sWidth": "10%",
                            "mRender": function (data, type, full) {
                                var id = full["id"];
                                str = '<a class="btn btn-info" href="/Home/Edit/' + id + '">Edit</a>';
                                return str;
                            }
                        },
                        {
                            "bSearchable": false,
                            "bSortable": false,
                            "sClass": "text-center",
                            "sWidth": "10%",
                            "mRender": function (data, type, full) {
                                var id = full["id"];
                                str = '<a class="btn btn-danger" href="#" onclick=DeleteData("' + id + '");>Delete</a>';
                                return str;
                            }
                        }
                    ]
                });
        });


        function DeleteData(CustomerID) {
            if (confirm("Are you sure you want to delete ...?")) {
                Delete(CustomerID);
            } else {
                return false;
            }
        }
            function Delete(CustomerID) {
            var url = '@Url.Content("~/")' + "Home/Delete";

            $.post(url, { Id: CustomerID }, function (data) {
                if (data) {
                    oTable = $('#agreementList').DataTable();
                    oTable.draw();
                } else {
                    alert("Something Went Wrong!");
                }
            });
            }

            function LoadProduct() {
                $.get("Home/GetProductListByGroupId?groupId=1").done(function (data) {
                    $('#ProductId').empty();
                    for (var i = 0; i < data.availableproduct.length; ++i) {
                        $('#ProductId').closest('select').append($('<option value="' + data.availableproduct[i].value + '">' + data.availableproduct[i].text + '</option>'));
                    }
                    $('#ProductId').closest('select').trigger("chosen:updated");
                });
            }

        </script>
    }
}